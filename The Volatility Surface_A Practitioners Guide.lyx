\begin_layout Itemize
一些预备知识：
\begin_inset Formula 
\[
\frac{\partial}{\partial S}(S-K)^{+}=1_{(S>K)}
\]

\end_inset


\begin_inset Formula 
\[
\frac{\partial}{\partial K}(S-K)^{+}=-1_{(S>K)}
\]

\end_inset


\begin_inset Formula 
\[
\frac{\partial C}{\partial K}=-P(t,T)E[1_{(S>K)}]
\]

\end_inset


\begin_inset Formula 
\[
\frac{\partial}{\partial S}1_{(S>K)}=\delta(S-K)
\]

\end_inset


\begin_inset Formula 
\[
\frac{\partial}{\partial K}1_{(S>K)}=-\delta(S-K)
\]

\end_inset


\begin_inset Formula 
\[
\frac{\partial^{2}C}{\partial K^{2}}=P(t,T)E[\delta(S-K)]
\]

\end_inset

其中
\begin_inset Formula $\delta(x)$
\end_inset

表示the Dirac delta function（在除了零以外的点函数值都等于零，而其在整个定义域上的积分等于1）。
\end_layout

\begin_layout Itemize
定义函数
\begin_inset Formula $f(S_{T},T)$
\end_inset

：
\begin_inset Formula 
\[
f(S_{T},T)=P(t,T)(S_{T}-K)^{+}
\]

\end_inset

由Ito's lemma，
\begin_inset Formula $f$
\end_inset

满足下列过程：
\begin_inset Formula 
\[
df=[\frac{\partial f}{\partial T}+\mu_{T}S_{T}\frac{\partial f}{\partial S_{T}}+\frac{1}{2}\sigma_{T}^{2}S_{T}^{2}\frac{\partial^{2}f}{\partial S_{T}^{2}}]dT+[\sigma_{T}S_{T}\frac{\partial f}{\partial S_{T}}]dW_{T}
\]

\end_inset

又
\begin_inset Formula $f$
\end_inset

的一些偏导数：
\begin_inset Formula 
\[
\frac{\partial f}{\partial T}=-r_{T}P(t,T)(S_{T}-K)^{+}
\]

\end_inset


\begin_inset Formula 
\[
\frac{\partial f}{\partial S_{T}}=P(t,T)1_{(S_{T}>K)}
\]

\end_inset


\begin_inset Formula 
\[
\frac{\partial^{2}f}{\partial S_{T}^{2}}=P(t,T)\delta(S_{T}-K)
\]

\end_inset

将上式代入
\begin_inset Formula $f$
\end_inset

的过程中：
\begin_inset Formula 
\[
df=P[-r_{T}(S_{T}-K)^{+}+\mu_{T}S_{T}1_{(S_{T}>K)}+\frac{1}{2}\sigma_{T}^{2}S_{T}^{2}\delta(S_{T}-K)]dT+P[\sigma_{T}S_{T}1_{(S_{T}>K)}]dW_{T}
\]

\end_inset

上式中
\begin_inset Formula 
\begin{align*}
-r_{T}(S_{T}-K)^{+}+\mu_{T}S_{T}1_{(S_{T}>K)} & =-r_{T}(S_{T}-K)1_{(S_{T}-K)}+\mu_{T}S_{T}1_{(S_{T}>K)}\\
 & =r_{T}K1_{(S_{T}-K)}-q_{T}S_{T}1_{(S_{T}>K)}
\end{align*}

\end_inset

因此
\begin_inset Formula 
\[
dC=E[df]=PE[r_{T}K1_{(S_{T}-K)}-q_{T}S_{T}1_{(S_{T}>K)}+\frac{1}{2}\sigma_{T}^{2}S_{T}^{2}\delta(S_{T}-K)]dT
\]

\end_inset

由
\begin_inset Formula $C=P\int_{K}^{\infty}(S_{T}-K)\varphi(S_{T})dS_{T}=PE[(S_{T}-K)^{+}]$
\end_inset

得
\begin_inset Formula 
\[
PE[S_{T}1_{(S_{T}>K)}]=C+KPE[1_{(S_{T}>K)}]
\]

\end_inset

于是
\begin_inset Formula 
\begin{align*}
\frac{dC}{dT} & =KPr_{T}E[1_{(S_{T}-K)}]-q_{T}(C+KPE[1_{(S_{T}>K)}])+\frac{1}{2}PE[\sigma_{T}^{2}S_{T}^{2}\delta(S_{T}-K)]\\
 & =-K\mu_{T}\frac{\partial C}{\partial K}-q_{T}C+\frac{1}{2}PE[\sigma_{T}^{2}S_{T}^{2}\delta(S_{T}-K)]
\end{align*}

\end_inset

对于
\begin_inset Formula $\frac{1}{2}PE[\sigma_{T}^{2}S_{T}^{2}\delta(S_{T}-K)]$
\end_inset

，有
\begin_inset Formula 
\begin{align*}
\frac{1}{2}PE[\sigma_{T}^{2}S_{T}^{2}\delta(S_{T}-K)] & =\frac{1}{2}PE[\sigma_{T}^{2}S_{T}^{2}|S_{T}=K]*E[\delta(S_{T}-K)]\\
 & =\frac{1}{2}PE[\sigma_{T}^{2}|S_{T}=K]*K^{2}*E[\delta(S_{T}-K)]\\
 & =\frac{1}{2}E[\sigma_{T}^{2}|S_{T}=K]*K^{2}*\frac{\partial^{2}C}{\partial K^{2}}
\end{align*}

\end_inset

因此
\begin_inset Formula 
\[
\frac{\partial C}{\partial T}=-K\mu_{T}\frac{\partial C}{\partial K}-q_{T}C+\frac{1}{2}E[\sigma_{T}^{2}|S_{T}=K]*K^{2}*\frac{\partial^{2}C}{\partial K^{2}}
\]

\end_inset

（对比前文，形式上是一致的）特别的，当
\begin_inset Formula $r_{T}=q_{T}=0$
\end_inset

时，有
\begin_inset Formula 
\[
E[\sigma_{T}^{2}|S_{T}=K]=\frac{\frac{\partial C}{\partial T}}{\frac{1}{2}K^{2}\frac{\partial^{2}C}{\partial K^{2}}}
\]

\end_inset

与前文结论一致。
\end_layout

