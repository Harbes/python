\begin_layout Subsection
向量自回归
\end_layout

\begin_layout Itemize
首先定义
\begin_inset Formula 
\[
\underset{(np\times1)}{\boldsymbol{\xi}_{t}}\equiv\left[\begin{array}{c}
\boldsymbol{y}_{t}-\boldsymbol{\mu}\\
\boldsymbol{y}_{t-1}-\boldsymbol{\mu}\\
\vdots\\
\boldsymbol{y}_{t-p+1}-\boldsymbol{\mu}
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
令
\begin_inset Formula $\boldsymbol{\Sigma}$
\end_inset

表示
\begin_inset Formula $\boldsymbol{\xi}$
\end_inset

的方差
\begin_inset Formula 
\[
\boldsymbol{\Sigma}=E(\boldsymbol{\xi}_{t}\boldsymbol{\xi}_{t}')=\left[\begin{array}{cccc}
\boldsymbol{\Gamma}_{0} & \boldsymbol{\Gamma}_{1} & \cdots & \boldsymbol{\Gamma}_{p-1}\\
\boldsymbol{\Gamma}_{1}' & \boldsymbol{\Gamma}_{0} & \cdots & \boldsymbol{\Gamma}_{p-2}\\
\vdots & \vdots & \cdots & \vdots\\
\boldsymbol{\Gamma}_{p-1}' & \boldsymbol{\Gamma}_{p-2}' & \cdots & \boldsymbol{\Gamma}_{0}
\end{array}\right]\tag{10.2.12}
\]

\end_inset

又由(10.1.11)可得
\begin_inset Formula 
\begin{align*}
\boldsymbol{\Sigma}=E(\boldsymbol{\xi}_{t}\boldsymbol{\xi}_{t}') & =E[(\boldsymbol{F}\boldsymbol{\xi}_{t-1}+\boldsymbol{V}_{t})(\boldsymbol{F}\boldsymbol{\xi}_{t-1}+\boldsymbol{V}_{t})']\\
 & =\boldsymbol{F}E(\boldsymbol{\xi}_{t-1}\boldsymbol{\xi}_{t-1}')\boldsymbol{F}'+E(\boldsymbol{V}_{t}\boldsymbol{V}_{t}')\\
 & =\boldsymbol{F}\boldsymbol{\Sigma}\boldsymbol{F}'+\boldsymbol{Q}\tag{10.2.13}
\end{align*}

\end_inset

由
\begin_inset Formula $vec(ABC)=(C'\otimes A)\cdot vec(B)$
\end_inset

得
\begin_inset Formula 
\[
vec(\boldsymbol{\Sigma})=(\boldsymbol{F}\otimes\boldsymbol{F})\cdot vec(\boldsymbol{\Sigma})+vec(\boldsymbol{Q})=\boldsymbol{M}\cdot vec(\boldsymbol{\Sigma})+vec(\boldsymbol{Q})
\]

\end_inset

其中
\begin_inset Formula $\boldsymbol{M}=\boldsymbol{F}\otimes\boldsymbol{F}$
\end_inset

，于是
\begin_inset Formula 
\[
vec(\boldsymbol{\Sigma})=(\boldsymbol{I}_{np\times np}-\boldsymbol{M})^{-1}vec(\boldsymbol{Q})\tag{10.2.18}
\]

\end_inset

其中
\begin_inset Formula $\boldsymbol{I}_{np\times np}-\boldsymbol{M}$
\end_inset

非奇异，即1不是
\begin_inset Formula $\boldsymbol{M}$
\end_inset

的特征值。因为
\begin_inset Formula $\boldsymbol{F}\otimes\boldsymbol{F}$
\end_inset

的特征值都是形如
\begin_inset Formula $\lambda_{i}\lambda_{j}$
\end_inset

，其中
\begin_inset Formula $\lambda_{i}$
\end_inset

和
\begin_inset Formula $\lambda_{j}$
\end_inset

是矩阵
\begin_inset Formula $\boldsymbol{F}$
\end_inset

的特征值，由于
\begin_inset Formula $|\lambda_{i}|<1$
\end_inset

对所有i都成立，因此
\begin_inset Formula $\boldsymbol{M}$
\end_inset

的所有特征值都在单位圆内。最后，一个
\begin_inset Formula $VAR(p)$
\end_inset

过程的前p阶自协方差矩阵可以通过下式求得：
\begin_inset Formula 
\[
\left[\begin{array}{cccc}
\boldsymbol{\Gamma}_{0} & \boldsymbol{\Gamma}_{1} & \cdots & \boldsymbol{\Gamma}_{p-1}\\
\boldsymbol{\Gamma}_{1}' & \boldsymbol{\Gamma}_{0} & \cdots & \boldsymbol{\Gamma}_{p-2}\\
\vdots & \vdots & \cdots & \vdots\\
\boldsymbol{\Gamma}_{p-1}' & \boldsymbol{\Gamma}_{p-2}' & \cdots & \boldsymbol{\Gamma}_{0}
\end{array}\right]=(\boldsymbol{I}_{np\times np}-\boldsymbol{M})^{-1}vec(\boldsymbol{Q})\tag{10.2.19}
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\boldsymbol{\xi}$
\end_inset

的j阶自协方差(
\begin_inset Formula $\boldsymbol{\Sigma}_{j}$
\end_inset

)
\begin_inset Formula 
\[
E(\boldsymbol{\xi}_{t}\boldsymbol{\xi}_{t-j}')=\boldsymbol{F}\cdot E(\boldsymbol{\xi}_{t-1}\boldsymbol{\xi}_{t-j}')+E(\boldsymbol{V}_{t}\boldsymbol{\xi}_{t-j}')
\]

\end_inset


\begin_inset Formula 
\begin{align*}
\boldsymbol{\Sigma}_{j} & =\boldsymbol{F}\boldsymbol{\Sigma}_{j-1}\tag{10.2.20}\\
 & =\boldsymbol{F}^{j}\boldsymbol{\Sigma}\text{，}j=1,2,...\tag{10.2.21}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
原过程
\begin_inset Formula $\boldsymbol{y}_{t}$
\end_inset

的j阶自协方差
\begin_inset Formula $\Gamma_{j}$
\end_inset

可由(10.2.20)的前n行n列给出：
\begin_inset Formula 
\[
\Gamma_{j}=\Phi_{1}\Gamma_{j-1}+\Phi_{2}\Gamma_{j-2}+...+\Phi_{p}\Gamma_{j-p}\text{，}j=p,p+1,p+2,...\tag{10.2.22}
\]

\end_inset


\end_layout

