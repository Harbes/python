\end_layout

\begin_layout Itemize
(d)
\begin_inset Formula 
\[
T^{-3/2}\sum_{t=1}^{T}\xi_{t-1}\overset{L}{\rightarrow}\sigma\cdot\int_{0}^{1}W(r)dr\tag{17.3.16}
\]

\end_inset


\end_layout

\begin_layout Itemize
(e)
