\begin_layout Subsection
计算似然函数
\end_layout

\begin_layout Itemize
一个高斯AR(1)过程形式如下
\begin_inset Formula 
\[
Y_{t}=c+\phi Y_{t-1}+\varepsilon_{t}\tag{5.2.1}
\]

\end_inset

其中
\begin_inset Formula $\varepsilon_{t}\sim iid\,N(0,\sigma^{2})$
\end_inset

。在此情况下，总体参数向量记为
\begin_inset Formula $\boldsymbol{\theta}\equiv(c,\phi,\sigma^{2})'$
\end_inset


\end_layout

\begin_layout Itemize
先考察第一个观测值
\begin_inset Formula $Y_{1}$
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $E(Y_{t})=\frac{c}{1-\phi}$
\end_inset

；
\begin_inset Formula $E(Y_{t}-\mu)$
\end_inset


\end_layout

\begin_layout Itemize
因为
\begin_inset Formula $\varepsilon_{t}$
\end_inset

是高斯分布的，于是
\begin_inset Formula $Y_{t}$
\end_inset

也是高斯分布的，因此，第一个观测值的密度函数
\begin_inset Formula 
\[
f_{Y_{1}}(y_{1};\boldsymbol{\theta})=\frac{1}{\sqrt{2\pi}\sqrt{\sigma^{2}/(1-\phi^{2})}}e^{-\frac{\{y_{1}-[c/(1-\phi)]\}^{2}}{2\sigma^{2}/(1-\phi^{2})}}\tag{5.2.2}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
考察其他观测值(
\begin_inset Formula $t\geq2$
\end_inset

)，一般的，
\begin_inset Formula $Y_{1},Y_{2},...,Y_{t-1}$
\end_inset

只通过
\begin_inset Formula $Y_{t-1}$
\end_inset

对
\begin_inset Formula $Y_{t}$
\end_inset

起作用，第t个观测值以前t-1个观测值为条件的分布为
\begin_inset Formula 
\begin{align*}
f_{Y_{t}|Y_{t-1},Y_{t-2},...,Y_{1}}(y_{t}|y_{t-1},y_{t-2},...,y_{1};\boldsymbol{\theta}) & =f_{Y_{t}|Y_{t-1}}(y_{t}|y_{t-1};\boldsymbol{\theta})\\
 & =\frac{1}{\sqrt{2\pi\sigma^{2}}}e^{-\frac{(y_{t}-c-\phi y_{t-1})^{2}}{2\sigma^{2}}}\tag{5.2.5}
\end{align*}

\end_inset

于是，样本似然函数为
\begin_inset Formula 
\[
f_{Y_{T},Y_{T-1},...,Y_{1}}(y_{T},y_{T-1},...,y_{1};\boldsymbol{\theta})=f_{Y_{1}}(y_{1};\boldsymbol{\theta})\cdot\prod_{t=2}^{T}f_{Y_{t}|Y_{t-1}}(y_{t}|y_{t-1};\boldsymbol{\theta})
\]

\end_inset

相应的对数似然函数为
\begin_inset Formula 
\begin{align*}
\mathscr{L}(\boldsymbol{\theta})= & lnf_{Y_{1}}(y_{1};\boldsymbol{\theta})+\sum_{t=2}^{T}lnf_{Y_{t}|Y_{t-1}}(y_{t}|y_{t-1};\boldsymbol{\theta})\\
= & -\frac{1}{2}ln(2\pi)-\frac{1}{2}ln\frac{\sigma^{2}}{1-\phi^{2}}-\frac{(y_{1}-\frac{c}{1-\phi})^{2}}{2\frac{\sigma^{2}}{1-\phi^{2}}}\\
 & -\frac{T-1}{2}ln(2\pi)-\frac{T-1}{2}ln(\sigma^{2})-\sum_{t=2}^{T}\frac{(y_{t}-c-\phi y_{t-1})^{2}}{2\sigma^{2}}\tag{5.2.9}
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection
似然函数的另一种表达形式
\end_layout

\begin_layout Itemize
将所有
\bar under
观测值
\bar default
写成(T*1)的向量形式：
\begin_inset Formula $\underset{(T\times1)}{\boldsymbol{y}}\equiv(y_{1},y_{2},...,y_{T})'$
\end_inset

，它可以看做T维高斯分布(随机变量记作
\begin_inset Formula $\boldsymbol{Y}$
\end_inset

)的一个实现，其均值：
\begin_inset Formula 
\[
E(\boldsymbol{Y})=\boldsymbol{\mu}
\]

\end_inset

方差-协方差矩阵为
\begin_inset Formula 
\begin{align*}
E[(\boldsymbol{Y}-\boldsymbol{\mu})(\boldsymbol{Y}-\boldsymbol{\mu})'] & =\boldsymbol{\Omega}\\
 & =\left[\begin{array}{cccc}
E(Y_{1}-\mu)^{2} & E(Y_{1}-\mu)(Y_{2}-\mu) & \cdots & E(Y_{1}-\mu)(Y_{T}-\mu)\\
E(Y_{2}-\mu)(Y_{1}-\mu) & E(Y_{2}-\mu)^{2} & \cdots & E(Y_{2}-\mu)(Y_{T}-\mu)\\
\vdots & \vdots & \cdots & \vdots\\
E(Y_{T}-\mu)(Y_{1}-\mu) & E(Y_{T}-\mu)(Y_{2}-\mu) & \cdots & E(Y_{T}-\mu)^{2}
\end{array}\right]\tag{5.2.12}
\end{align*}

\end_inset

其中
\begin_inset Formula $E(Y_{t}-\mu)(Y_{t-j}-\mu)=\phi^{j}\frac{\sigma^{2}}{1-\phi^{2}}$
\end_inset

。因此，式(5.2.12)可以写为
\begin_inset Formula 
\[
\boldsymbol{\Omega}=\sigma^{2}\boldsymbol{V}\tag{5.2.14}
\]

\end_inset

其中
\begin_inset Formula 
\[
\boldsymbol{V}=\frac{1}{1-\phi^{2}}\left[\begin{array}{ccccc}
1 & \phi & \phi^{2} & \cdots & \phi^{T-1}\\
\phi & 1 & \phi & \cdots & \phi^{T-2}\\
\phi^{2} & \phi & 1 & \cdots & \phi^{T-3}\\
\vdots & \vdots & \vdots & \cdots & \vdots\\
\phi^{T-1} & \phi^{T-2} & \phi^{T-3} & \cdots & 1
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
将观测到的样本
\begin_inset Formula $\boldsymbol{y}$
\end_inset

看做由
\begin_inset Formula $N(\boldsymbol{\mu},\boldsymbol{\Omega})$
\end_inset

分布得到的一个简单抽样，样本似然值可根据多远高斯密度公式直接计算出来
\begin_inset Formula 
\[
f_{\boldsymbol{Y}}(y;\theta)=(2\pi)^{-T/2}|\boldsymbol{\Omega}^{-1}|^{1/2}e^{-\frac{1}{2}(\boldsymbol{y-\mu})'\boldsymbol{\Omega}^{-1}(\boldsymbol{y-\mu})}\tag{5.2.16}
\]

\end_inset

其对数似然值为
\begin_inset Formula 
\[
\mathscr{L}(\theta)=-\frac{T}{2}ln(2\pi)+\frac{1}{2}ln(|\boldsymbol{\Omega}^{-1}|)-\frac{1}{2}(\boldsymbol{y-\mu})'\boldsymbol{\Omega}^{-1}(\boldsymbol{y-\mu})\tag{5.2.17}
\]

\end_inset


\end_layout

\begin_layout Itemize
可以证明式(5.2.17)和式(5.2.9)是关于
\begin_inset Formula $(y_{1},y_{2},...,y_{T})$
\end_inset

的同一个函数，首先，定义
\begin_inset Formula 
\[
\underset{(T\times T)}{\boldsymbol{L}}=\left[\begin{array}{cccccc}
\sqrt{1-\phi^{2}} & 0 & 0 & \cdots & 0 & 0\\
-\phi & 1 & 0 & \cdots & 0 & 0\\
0 & -\phi & 1 & \cdots & 0 & 0\\
\vdots & \vdots & \vdots & \cdots & \vdots & \vdots\\
0 & 0 & 0 & \cdots & -\phi & 1
\end{array}\right]
\]

\end_inset

可直接证明
\begin_inset Formula $\boldsymbol{L}'\boldsymbol{L}=\boldsymbol{V}^{-1}$
\end_inset

，再由(5.2.14)可得
\begin_inset Formula $\boldsymbol{\Omega}^{-1}=\sigma^{-2}\boldsymbol{L}'\boldsymbol{L}$
\end_inset

，代入(5.2.17)得
\begin_inset Formula 
\[
\mathscr{L}(\theta)=-\frac{T}{2}ln(2\pi)+\frac{1}{2}ln(|\sigma^{-2}\boldsymbol{L}'\boldsymbol{L}|)-\frac{1}{2}(\boldsymbol{y-\mu})'\sigma^{-2}\boldsymbol{L}'\boldsymbol{L}(\boldsymbol{y-\mu})\tag{5.2.21}
\]

\end_inset

定义
\begin_inset Formula $(T*1)$
\end_inset

向量
\begin_inset Formula $\tilde{\boldsymbol{y}}$
\end_inset

为
\begin_inset Formula 
\begin{align*}
\tilde{\boldsymbol{y}} & \equiv\boldsymbol{L(y-\mu)}\\
 & =\left[\begin{array}{cccccc}
\sqrt{1-\phi^{2}} & 0 & 0 & \cdots & 0 & 0\\
-\phi & 1 & 0 & \cdots & 0 & 0\\
0 & -\phi & 1 & \cdots & 0 & 0\\
\vdots & \vdots & \vdots & \cdots & \vdots & \vdots\\
0 & 0 & 0 & \cdots & -\phi & 1
\end{array}\right]\left[\begin{array}{c}
y_{1}-\mu\\
y_{2}-\mu\\
y_{3}-\mu\\
\vdots\\
y_{T}-\mu
\end{array}\right]\\
 & =\left[\begin{array}{c}
\sqrt{1-\phi^{2}}(y_{1}-\mu)\\
(y_{2}-\mu)-\phi(y_{1}-\mu)\\
(y_{3}-\mu)-\phi(y_{2}-\mu)\\
\vdots\\
(y_{T}-\mu)-\phi(y_{T-1}-\mu)
\end{array}\right]
\end{align*}

\end_inset

将
\begin_inset Formula $\mu=\frac{c}{1-\phi}$
\end_inset

代入得
\begin_inset Formula 
\[
\tilde{\boldsymbol{y}}=\left[\begin{array}{c}
\sqrt{1-\phi^{2}}(y_{1}-\frac{c}{1-\phi})\\
y_{2}-c-\phi y_{1}\\
y_{3}-c-\phi y_{2}\\
\vdots\\
y_{T}-c-\phi y_{T-1}
\end{array}\right]
\]

\end_inset

于是(5.2.21)的最后一项可写为
\begin_inset Formula 
\begin{align*}
\frac{1}{2}(\boldsymbol{y-\mu})'\sigma^{-2}\boldsymbol{L}'\boldsymbol{L}(\boldsymbol{y-\mu})= & \frac{1}{2\sigma^{2}}\tilde{\boldsymbol{y}}'\tilde{\boldsymbol{y}}\\
= & \frac{1}{2\sigma^{2}}(1-\phi^{2})(y_{1}-\frac{c}{1-\phi})^{2}+\frac{1}{2\sigma^{2}}\sum_{t=2}^{T}(y_{t}-c-\phi y_{t-1})^{2}
\end{align*}

\end_inset

类似的，(5.2.21)的中间一项可写为
\begin_inset Formula 
\begin{align*}
\frac{1}{2}ln(|\sigma^{-2}\boldsymbol{L}'\boldsymbol{L}|) & =-\frac{T}{2}ln(\sigma^{2})+ln(|\boldsymbol{L}|)\\
 & =-\frac{T}{2}ln(\sigma^{2})+ln(1-\phi^{2})\tag{5.2.25}
\end{align*}

\end_inset

将上面所有都整合起来即可证明。
\end_layout

\begin_layout Itemize
注意(5.2.17)需要求一个
\begin_inset Formula $(T\times T)$
\end_inset

矩阵的逆，显然，这不便于运算
\end_layout

\begin_layout Subsection
高斯AR(1)过程的精确最大似然估计
\end_layout

\begin_layout Itemize
最大化(5.2.9)所得
\begin_inset Formula $\hat{\boldsymbol{\theta}}$
\end_inset


\end_layout

\begin_layout Subsection
条件最大似然估计
\end_layout

\begin_layout Itemize
有时候，可以将
\begin_inset Formula $y_{1}$
\end_inset

视作确定的常熟，然后最大化以第一个观测值为条件的似然值
\begin_inset Formula 
\[
f_{Y_{T},Y_{T-1},...,Y_{2}|Y_{1}}(y_{T},y_{T-1},...,y_{2}|y_{1})=\prod_{t=2}^{T}f_{Y_{t}|Y_{t-1}}(y_{t}|y_{t-1};\boldsymbol{\theta})\tag{5.2.26}
\]

\end_inset

于是现在最大化的目标为
\begin_inset Formula 
\begin{align*}
\mathrm{ln}f_{Y_{T},Y_{T-1},...,Y_{2}|Y_{1}}(y_{T},y_{T-1},...,y_{2}|y_{1})= & -\frac{T-1}{2}ln(2\pi)-\frac{T-1}{2}ln(\sigma^{2})\\
 & -\sum_{t=2}^{T}\frac{(y_{t}-c-\phi y_{t-1})^{2}}{2\sigma^{2}}\tag{5.2.27}
\end{align*}

\end_inset

显然，关于
\begin_inset Formula $c$
\end_inset

和
\begin_inset Formula $\phi$
\end_inset

函数式(5.2.27)的最大值等价于求下式的最小值
\begin_inset Formula 
\[
\sum_{t=2}^{T}(y_{t}-c-\phi y_{t-1})^{2}
\]

\end_inset

此式中的
\begin_inset Formula $c$
\end_inset

和
\begin_inset Formula $\phi$
\end_inset

的估计值可以通过OLS得到
\begin_inset Formula 
\[
\left[\begin{array}{c}
\hat{c}\\
\hat{\phi}
\end{array}\right]=\left[\begin{array}{cc}
T-1 & \sum y_{t-1}\\
\sum y_{t-1} & \sum y_{t-1}^{2}
\end{array}\right]^{-1}\left[\begin{array}{c}
\sum y_{t}\\
\sum y_{t-1}y_{t}
\end{array}\right]
\]

\end_inset

式(5.2.27)关于
\begin_inset Formula $\sigma^{2}$
\end_inset

求导并令其结果等于0可求得方差的条件似然估计
\begin_inset Formula 
\[
-\frac{T-1}{2\sigma^{2}}+\sum_{t=2}^{T}\frac{(y_{t}-c-\phi y_{t-1})^{2}}{2\sigma^{4}}=0
\]

\end_inset

或
\begin_inset Formula 
\[
\hat{\sigma}^{2}=\sum_{t=2}^{T}\frac{(y_{t}-\hat{c}-\hat{\phi}y_{t-1})^{2}}{T-1}
\]

\end_inset

这也是OLS回归式得到的均方残差
\end_layout

\begin_layout Itemize
与精确最大似然不同，条件最大似然易于计算。另外，如果样本容量T足够大，则第一个观测值可以忽略。只要
\begin_inset Formula $|\phi|<1$
\end_inset

，精确MLE和条件MLE就具有相同的大样本分布；当
\begin_inset Formula $|\phi|>1$
\end_inset

时，条件MLE仍然可以给出一致估计，而最大化(5.2.9)则无法做到这一点【这是因为(5.2.9)是由(5.2.2)导出的，后者在
\begin_inset Formula $|\phi|>1$
\end_inset

时并不能精确地描述
\begin_inset Formula $Y_{1}$
\end_inset

的密度】。基于这些原因，在多数应用中，自回归系数都由OLS(条件最大似然)估计而不是通过精确最大似然估计。
\end_layout

\begin_layout Section
高斯AR(p)的似然函数
\end_layout

\begin_layout Subsection
计算似然函数
\end_layout

\begin_layout Itemize
样本的前p个观测值
\begin_inset Formula $(y_{1},y_{2},...,y_{p})$
\end_inset

构成一个
\begin_inset Formula $(p\times1)$
\end_inset

向量
\begin_inset Formula $\boldsymbol{y}_{p}$
\end_inset

，可将它视为p维高斯变量
\begin_inset Formula $(Y_{1},Y_{2},...,Y_{p})$
\end_inset

的一个实现。该向量均值为
\begin_inset Formula 
\[
\underset{(p\times1)}{\boldsymbol{\mu}_{p}}=\left[\begin{array}{c}
\mu\\
\mu\\
\vdots\\
\mu
\end{array}\right]=\left[\begin{array}{c}
\frac{c}{1-\phi_{1}-\phi_{2}-...-\phi_{p}}\\
\frac{c}{1-\phi_{1}-\phi_{2}-...-\phi_{p}}\\
\vdots\\
\frac{c}{1-\phi_{1}-\phi_{2}-...-\phi_{p}}
\end{array}\right]
\]

\end_inset

方差-协方差矩阵为
\begin_inset Formula 
\begin{align*}
\sigma^{2}\boldsymbol{V}_{p} & =\left[\begin{array}{cccc}
E(Y_{1}-\mu)^{2} & E(Y_{1}-\mu)(Y_{2}-\mu) & \cdots & E(Y_{1}-\mu)(Y_{2}-\mu)\\
E(Y_{2}-\mu)(Y_{1}-\mu) & E(Y_{2}-\mu)^{2} & \cdots & E(Y_{2}-\mu)(Y_{p}-\mu)\\
\vdots & \vdots & \cdots & \vdots\\
E(Y_{p}-\mu)(Y_{1}-\mu) & E(Y_{p}-\mu)(Y_{2}-\mu) & \cdots & E(Y_{p}-\mu)^{2}
\end{array}\right]\\
 & =\left[\begin{array}{ccccc}
\gamma_{0} & \gamma_{1} & \gamma_{2} & \cdots & \gamma_{p-1}\\
\gamma_{1} & \gamma_{0} & \gamma_{1} & \cdots & \gamma_{p-2}\\
\gamma_{2} & \gamma_{1} & \gamma_{0} & \cdots & \gamma_{p-3}\\
\vdots & \vdots & \vdots & \cdots & \vdots\\
\gamma_{p-1} & \gamma_{p-2} & \gamma_{p-3} & \cdots & \gamma_{0}
\end{array}\right]
\end{align*}

\end_inset

前p个观测值的密度是一个
\begin_inset Formula $N(\boldsymbol{\mu}_{p},\sigma^{2}\boldsymbol{V}_{p})$
\end_inset

变量的密度：
\begin_inset Formula 
\begin{align*}
f_{Y_{p},Y_{p-1},...,Y_{1}}(y_{p},y_{p-1},...,y_{1};\boldsymbol{\theta}) & =(2\pi)^{-\frac{p}{2}}|\sigma^{-2}\boldsymbol{V}_{p}^{-1}|^{\frac{1}{2}}e^{-\frac{1}{2\sigma^{2}}(\boldsymbol{y}_{\boldsymbol{p}}-\boldsymbol{\mu}_{\boldsymbol{p}})'\boldsymbol{V}_{p}^{-1}(\boldsymbol{y}_{\boldsymbol{p}}-\boldsymbol{\mu}_{\boldsymbol{p}})}\\
 & =(2\pi\sigma^{2})^{-\frac{p}{2}}|\boldsymbol{V}_{p}^{-1}|^{\frac{1}{2}}e^{-\frac{1}{2\sigma^{2}}(\boldsymbol{y}_{\boldsymbol{p}}-\boldsymbol{\mu}_{\boldsymbol{p}})'\boldsymbol{V}_{p}^{-1}(\boldsymbol{y}_{\boldsymbol{p}}-\boldsymbol{\mu}_{\boldsymbol{p}})}\tag{5.3.4}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
对于样本中余下的观测值
\begin_inset Formula $(y_{p+1},y_{p+2},...,y_{T})$
\end_inset

，可应用
\bar under
\color red
预测误差分解
\bar default
\color inherit
(?)。以前t-1个观测值为条件，第t个观测值是高斯的，其均值为
\begin_inset Formula 
\[
c+\phi_{1}y_{t-1}+\phi_{2}y_{t-2}+...+\phi_{p}y_{t-p}
\]

\end_inset

且其方差为
\begin_inset Formula $\sigma^{2}$
\end_inset

(这个分布只有最近p个观测值是有用的)，条件密度为
\begin_inset Formula 
\begin{align*}
f_{Y_{t}|Y_{t-1},Y_{t-2},...,Y_{1}}(y_{t}|y_{t-1},y_{t-2},...,y_{1};\boldsymbol{\theta}) & =f_{Y_{t}|Y_{t-1},Y_{t-2},...,Y_{t-p}}(y_{t}|y_{t-1},y_{t-2},...,y_{t-p};\boldsymbol{\theta})\\
 & =\frac{1}{\sqrt{2\pi\sigma^{2}}}e^{-\frac{(y_{t}-c-\phi_{1}y_{t-1}-\phi_{2}y_{t-2}-...-\phi_{p}y_{t-p})^{2}}{2\sigma^{2}}}
\end{align*}

\end_inset

于是全部样本的似然函数为
\begin_inset Formula 
\[
f_{Y_{t},Y_{t-1},Y_{t-2},...,Y_{1}}(y_{t},y_{t-1},y_{t-2},...,y_{1};\boldsymbol{\theta})=f_{Y_{p},Y_{p-1},...,Y_{1}}(y_{p},y_{p-1},...,y_{1};\boldsymbol{\theta})\cdot\prod_{t=p+1}^{T}f_{Y_{t}|Y_{t-1},Y_{t-2},...,Y_{t-p}}(y_{t}|y_{t-1},y_{t-2},...,y_{t-p};\boldsymbol{\theta})
\]

\end_inset

对数似然值为
\begin_inset Formula 
\begin{align*}
\mathscr{L}(\boldsymbol{\theta})= & \mathrm{ln}f_{Y_{t},Y_{t-1},Y_{t-2},...,Y_{1}}(y_{t},y_{t-1},y_{t-2},...,y_{1};\boldsymbol{\theta})\\
= & -\frac{p}{2}ln(2\pi)-\frac{p}{2}ln(\sigma^{2})+\frac{1}{2}ln(|\boldsymbol{V}_{p}^{-1}|)-\frac{1}{2\sigma^{2}}(\boldsymbol{y}_{\boldsymbol{p}}-\boldsymbol{\mu}_{\boldsymbol{p}})'\boldsymbol{V}_{p}^{-1}(\boldsymbol{y}_{\boldsymbol{p}}-\boldsymbol{\mu}_{\boldsymbol{p}})\\
 & -\frac{T-p}{2}ln(2\pi)-\frac{T-p}{2}ln(\sigma^{2})-\sum_{t=p+1}^{T}\frac{(y_{t}-c-\phi_{1}y_{t-1}-\phi_{2}y_{t-2}-...-\phi_{p}y_{t-p})^{2}}{2\sigma^{2}}\\
= & -\frac{T}{2}ln(2\pi)-\frac{T}{2}ln(\sigma^{2})+\frac{1}{2}ln(|\boldsymbol{V}_{p}^{-1}|)-\frac{1}{2\sigma^{2}}(\boldsymbol{y}_{\boldsymbol{p}}-\boldsymbol{\mu}_{\boldsymbol{p}})'\boldsymbol{V}_{p}^{-1}(\boldsymbol{y}_{\boldsymbol{p}}-\boldsymbol{\mu}_{\boldsymbol{p}})\\
 & -\sum_{t=p+1}^{T}\frac{(y_{t}-c-\phi_{1}y_{t-1}-\phi_{2}y_{t-2}-...-\phi_{p}y_{t-p})^{2}}{2\sigma^{2}}\tag{5.3.6}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
上式需要求
\begin_inset Formula $(p\times p)$
\end_inset

矩阵
\begin_inset Formula $\boldsymbol{V}_{p}$
\end_inset

的逆，令矩阵
\begin_inset Formula $\boldsymbol{V}_{p}^{-1}$
\end_inset

的第i行第j列元素记为
\begin_inset Formula $v^{ij}(p)$
\end_inset

，
\begin_inset Formula $Galbraixh\,and\,Galbraith(1974)$
\end_inset

证明了
\begin_inset Formula 
\[
v^{ij}(p)=\sum_{k=0}^{i-1}\phi_{k}\phi_{k+j-i}-\sum_{k=p+1-j}^{p+i-j}\phi_{k}\phi_{k+j-i}\text{，}1\leq i\leq j\leq p\tag{5.3.7}
\]

\end_inset

其中
\begin_inset Formula $\phi_{0}=1$
\end_inset


\end_layout

\begin_layout Subsection
条件最大似然估计
\end_layout

\begin_layout Itemize
以前p个观测值为条件的对数似然估计有如下的简洁形式
\begin_inset Formula 
\begin{align*}
\mathrm{ln}f_{Y_{T},Y_{T-1},...,Y_{p+1}|Y_{p},...,Y_{1}}(y_{T},y_{t-1},...,y_{p+1}|y_{p},...,y_{1};\boldsymbol{\theta})= & -\frac{T-p}{2}ln(2\pi)-\frac{T-p}{2}ln(\sigma^{2})\\
 & -\sum_{t=p+1}^{T}\frac{(y_{t}-c-\phi_{1}y_{t-1}-\phi_{2}y_{t-2}-...-\phi_{p}y_{t-p})^{2}}{2\sigma^{2}}\tag{5.3.9}
\end{align*}

\end_inset

同样的，上式等价于下式的最小化
\begin_inset Formula 
\[
\sum_{t=p+1}^{T}(y_{t}-c-\phi_{1}y_{t-1}-\phi_{2}y_{t-2}-...-\phi_{p}y_{t-p})^{2}\tag{5.3.10}
\]

\end_inset

这可以通过
\begin_inset Formula $y_{t}$
\end_inset

关于常数项和它的p个滞后值的OLS回归得到MLE，而
\begin_inset Formula $\sigma^{2}$
\end_inset

的极大似然估计则为上述回归的均方残差
\begin_inset Formula 
\[
\hat{\sigma}^{2}=\frac{1}{T-p}\sum_{t=p+1}^{T}(y_{t}-\hat{c}-\hat{\phi}_{1}y_{t-1}-\hat{\phi}_{2}y_{t-2}-...-\hat{\phi}_{p}y_{t-p})^{2}
\]

\end_inset


\end_layout

\begin_layout Subsection
非高斯时间序列的最大似然估计
\end_layout

\begin_layout Section
高斯MA(1)的似然函数
\end_layout

\begin_layout Subsection
条件似然函数
\end_layout

\begin_layout Itemize
考察MA(1)过程
\begin_inset Formula 
\[
Y_{t}=\mu+\varepsilon_{t}+\theta\varepsilon_{t-1}\tag{5.4.1}
\]

\end_inset

其中
\begin_inset Formula $\varepsilon_{t}\sim iid\,N(0,\sigma^{2})$
\end_inset

。令
\begin_inset Formula $\boldsymbol{\theta}=(\mu,\theta,\sigma^{2})'$
\end_inset

表示要估计的总体参数。
\end_layout

\begin_layout Itemize
假定
\begin_inset Formula $\varepsilon_{0}=0$
\end_inset

，则
\begin_inset Formula $(Y_{1}|\varepsilon_{0})\sim N(\mu,\sigma^{2})$
\end_inset

。此时可以根据
\begin_inset Formula $y_{1},\varepsilon_{0}$
\end_inset

继续往下迭代
\begin_inset Formula $\varepsilon_{1}=y_{1}-\mu$
\end_inset

，总结：如果已知
\begin_inset Formula $\varepsilon_{t-1}$
\end_inset

(t>1)的值，则
\begin_inset Formula 
\[
Y_{t}|\varepsilon_{t-1}\sim N(\mu+\theta\varepsilon_{t-1},\sigma^{2})
\]

\end_inset

或
\begin_inset Formula 
\begin{align*}
f_{Y_{t}|Y_{t-1},Y_{t-2},...,Y_{1},\varepsilon_{0}}(y_{t}|y_{t-1},y_{t-2},...,y_{1},\varepsilon_{0}=0;\boldsymbol{\theta}) & =f_{Y_{t}|\varepsilon_{t-1}}(y_{t}|\varepsilon_{t-1};\boldsymbol{\theta})\\
 & =\frac{1}{\sqrt{2\pi\sigma^{2}}}e^{-\frac{\varepsilon_{t}^{2}}{2\sigma^{2}}}\\
 & =\frac{1}{\sqrt{2\pi\sigma^{2}}}e^{-\frac{(y_{t}-\mu-\varepsilon_{t-1})^{2}}{2\sigma^{2}}}\tag{5.4.2}
\end{align*}

\end_inset

于是样本似然函数
\begin_inset Formula 
\begin{align*}
f_{Y_{T},Y_{T-1},...,Y_{1}|\varepsilon_{0}}(y_{T},y_{T-1},...,y_{1}|\varepsilon_{0}=0;\boldsymbol{\theta})\\
= & f_{Y_{1}|\varepsilon_{0}=0}(y_{1}|\varepsilon_{0}=0;\boldsymbol{\theta})\prod_{t=2}^{T}f_{Y_{t}|Y_{t-1},Y_{t-2},...,Y_{1},\varepsilon_{0}}(y_{t}|y_{t-1},y_{t-2},...,y_{1},\varepsilon_{0}=0;\boldsymbol{\theta})
\end{align*}

\end_inset

对应的条件对数似然函数
\begin_inset Formula 
\begin{align*}
\mathscr{L}(\boldsymbol{\theta}) & =lnf_{Y_{T},Y_{T-1},...,Y_{1}|\varepsilon_{0}}(y_{T},y_{T-1},...,y_{1}|\varepsilon_{0}=0;\boldsymbol{\theta})\\
 & =-\frac{T}{2}ln(2\pi)-\frac{T}{2}ln(\sigma^{2})-\sum_{t=1}^{T}\frac{\varepsilon_{t}^{2}}{2\sigma^{2}}\tag{5.4.5}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
注意当
\begin_inset Formula $|\theta|\ll1$
\end_inset

，则我们假设
\begin_inset Formula $\varepsilon_{0}=0$
\end_inset

的影响将很快消失，(5.4.5)就给出了无条件对数似然函数的一个良好近似。然而，当
\begin_inset Formula $|\theta|>1$
\end_inset

时，则假定
\begin_inset Formula $\varepsilon_{0}=0$
\end_inset

的后果将随时间而累积，在此情形下条件方法就不再合理（
\bar under
\color red
怎么办？
\bar default
\color inherit
）
\end_layout

\begin_layout Subsection
精确似然函数
\end_layout

\begin_layout Itemize
计算MA(1)过程的精确似然函数有两种简便方法：一是运用卡尔曼滤波(第13章)；二是运用方差-协方差矩阵的三角分解(下面就是讨论此方法)。
\end_layout

\begin_layout Itemize
首先将y的观测值
\begin_inset Formula $(y_{1},y_{2},...,y_{T})$
\end_inset

看成是
\begin_inset Formula $(T\times1)$
\end_inset

维向量
\begin_inset Formula $(Y_{1},Y_{2},...,Y_{T})$
\end_inset

的一个实现，其均值为
\begin_inset Formula $\boldsymbol{\mu}=(\mu,\mu,...,\mu)'$
\end_inset

，方差-协方差矩阵为
\begin_inset Formula $(T\times T)$
\end_inset

维度的矩阵：
\begin_inset Formula $\boldsymbol{\Omega}=E(\boldsymbol{Y}-\boldsymbol{\mu})(\boldsymbol{Y}-\boldsymbol{\mu})'$
\end_inset

，对于MA(1)过程而言
\begin_inset Formula 
\[
\boldsymbol{\Omega}=\sigma^{2}\left[\begin{array}{ccccc}
1+\theta^{2} & \theta & 0 & \cdots & 0\\
\theta & 1+\theta^{2} & \theta & \cdots & 0\\
0 & \theta & 1+\theta^{2} & \cdots & 0\\
\vdots & \vdots & \vdots & \cdots & \vdots\\
0 & 0 & 0 & \cdots & 1+\theta^{2}
\end{array}\right]
\]

\end_inset

对应的似然函数为
\begin_inset Formula 
\[
f_{\boldsymbol{Y}}(\boldsymbol{y};\boldsymbol{\theta})=(2\pi)^{-T/2}|\boldsymbol{\Omega}|^{-1/2}e^{-\frac{1}{2}(\boldsymbol{y}-\boldsymbol{\mu})'\boldsymbol{\Omega}^{-1}(\boldsymbol{y}-\boldsymbol{\mu})}\tag{5.4.6}
\]

\end_inset


\end_layout

\begin_layout Itemize
由
\begin_inset Formula $\boldsymbol{\Omega}$
\end_inset

的三角分解可得到似然的预测误差分解
\begin_inset Formula 
\[
\boldsymbol{\Omega}=\boldsymbol{ADA}'\tag{5.4.7}
\]

\end_inset

代入(5.4.6)可得
\begin_inset Formula 
\[
f_{\boldsymbol{Y}}(\boldsymbol{y};\boldsymbol{\theta})=(2\pi)^{-T/2}|\boldsymbol{ADA}'|^{-1/2}e^{-\frac{1}{2}(\boldsymbol{y}-\boldsymbol{\mu})'[\boldsymbol{A}']^{-1}\boldsymbol{D}^{-1}\boldsymbol{A}^{-1}(\boldsymbol{y}-\boldsymbol{\mu})}\tag{5.4.8}
\]

\end_inset

定义
\begin_inset Formula $\tilde{\boldsymbol{y}}\equiv\boldsymbol{A}^{-1}(\boldsymbol{y}-\boldsymbol{\mu})$
\end_inset

，则(5.4.8)可写为
\begin_inset Formula 
\[
f_{\boldsymbol{Y}}(\boldsymbol{y};\boldsymbol{\theta})=(2\pi)^{-T/2}|\boldsymbol{D}|^{-1/2}e^{-\frac{1}{2}\tilde{\boldsymbol{y}}'\boldsymbol{D}^{-1}\tilde{\boldsymbol{y}}}\tag{5.4.10}
\]

\end_inset


\end_layout

\begin_layout Itemize
注意
\begin_inset Formula $\tilde{\boldsymbol{y}}\equiv\boldsymbol{A}^{-1}(\boldsymbol{y}-\boldsymbol{\mu})$
\end_inset

意味着
\begin_inset Formula 
\begin{align*}
\tilde{y}_{1} & =y_{1}-\mu\\
\tilde{y}_{t} & =y_{t}-\mu-\theta\frac{1+\theta^{2}+\theta^{4}+...+\theta^{2(t-2)}}{1+\theta^{2}+\theta^{4}+...+\theta^{2(t-1)}}\tilde{y}_{t-1}(t>1)
\end{align*}

\end_inset

显然变量
\begin_inset Formula $\tilde{y}_{t}$
\end_inset

可视为
\begin_inset Formula $y_{t}$
\end_inset

关于常数项和
\begin_inset Formula $y_{t-1},y_{t-2},...,y_{1}$
\end_inset

的线性投影的残差。
\begin_inset Formula $\boldsymbol{D}$
\end_inset

的主对角线元素给出了这一线性投影的MSE
\begin_inset Formula 
\[
d_{tt}=E(\tilde{Y}_{t}^{2})=\sigma^{2}\frac{1+\theta^{2}+\theta^{4}+...+\theta^{2t}}{1+\theta^{2}+\theta^{4}+...+\theta^{2(t-1)}}\tag{5.4.12}
\]

\end_inset

于是
\begin_inset Formula 
\[
\tilde{\boldsymbol{y}}'\boldsymbol{D}^{-1}\tilde{\boldsymbol{y}}=\sum_{t=1}^{T}\frac{\tilde{y}_{t}^{2}}{d_{tt}}
\]

\end_inset

最终似然函数变为
\begin_inset Formula 
\[
f_{\boldsymbol{Y}}(\boldsymbol{y};\boldsymbol{\theta})=(2\pi)^{-T/2}|\prod_{t=1}^{T}d_{tt}|^{-1/2}e^{-\frac{1}{2}\sum_{t=1}^{T}\frac{\tilde{y}_{t}^{2}}{d_{tt}}}\tag{5.4.15}
\]

\end_inset

对数似然函数为
\begin_inset Formula 
\begin{align*}
\mathscr{L}(\boldsymbol{\theta}) & =lnf_{\boldsymbol{Y}}(\boldsymbol{y};\boldsymbol{\theta})\\
 & =-\frac{T}{2}ln(2\pi)-\frac{1}{2}\sum_{t=1}^{T}ln(d_{tt})-\frac{1}{2}\sum_{t=1}^{T}\frac{\tilde{y}_{t}^{2}}{d_{tt}}\tag{5.4.16}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
值得注意的是，与条件对数似然函数式(5.4.5)不同，不管
\begin_inset Formula $\theta$
\end_inset

是否与一个可逆的MA(1)表示有关，表达式(5.4.16)都是成立的。
\end_layout

\begin_layout Section
高斯MA(q)的似然函数
\end_layout

\begin_layout Subsection
条件似然函数
\end_layout

\begin_layout Itemize
对于MA(q)过程
\begin_inset Formula 
\[
Y_{t}=\mu+\varepsilon_{t}+\theta_{1}\varepsilon_{t-1}+...+\theta_{q}\varepsilon_{t-q}\tag{5.5.1}
\]

\end_inset


\end_layout

\begin_layout Itemize
一个简单的方法就是假定前q项
\begin_inset Formula $\varepsilon$
\end_inset

值全为0
\begin_inset Formula 
\[
\varepsilon_{0}=\varepsilon_{-1}=...=\varepsilon_{-q+1}=0\tag{5.5.2}
\]

\end_inset

于是后面的
\begin_inset Formula $\varepsilon$
\end_inset

就可以通过迭代的方法得到
\begin_inset Formula 
\[
\varepsilon_{t}=y_{t}-(\mu+\theta_{1}\varepsilon_{t-1}+...+\theta_{q}\varepsilon_{t-q})\tag{5.5.3}
\]

\end_inset

其中t>0。令
\begin_inset Formula $\boldsymbol{\varepsilon}_{0}$
\end_inset

表示
\begin_inset Formula $(q\times1)$
\end_inset

向量
\begin_inset Formula $(\varepsilon_{0},\varepsilon_{-1},...,\varepsilon_{-q+1})$
\end_inset

。于是条件对数似然函数可写为
\begin_inset Formula 
\begin{align*}
\mathscr{L}(\boldsymbol{\theta}) & =lnf_{Y_{T},Y_{T-1},...,Y_{1}|\boldsymbol{\varepsilon_{0}}}(y_{T},y_{T-1},...,y_{1}|\boldsymbol{\varepsilon_{0}=0};\boldsymbol{\theta})\\
 & =-\frac{T}{2}ln(2\pi)-\frac{T}{2}ln(\sigma^{2})-\sum_{t=1}^{T}\frac{\varepsilon_{t}^{2}}{2\sigma^{2}}\tag{5.5.4}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
注意，只有当
\begin_inset Formula $1+\theta_{1}z+\theta_{2}z^{2}+...+\theta_{q}z^{q}=0$
\end_inset

的根全部落在单位圆之外时，表达式(5.5.4)才有意义。
\end_layout

\begin_layout Subsection
精确似然函数
\end_layout

\begin_layout Itemize
精确似然函数由下式给出
\begin_inset Formula 
\[
f_{\boldsymbol{Y}}(\boldsymbol{y};\boldsymbol{\theta})=(2\pi)^{-T/2}|\boldsymbol{\Omega}|^{-1/2}e^{-\frac{1}{2}(\boldsymbol{y}-\boldsymbol{\mu})'\boldsymbol{\Omega}^{-1}(\boldsymbol{y}-\boldsymbol{\mu})}\tag{5.5.5}
\]

\end_inset

其中，
\begin_inset Formula $\boldsymbol{\Omega}$
\end_inset

是可以看做
\begin_inset Formula $\{\gamma_{k}\}_{k=0}^{T}$
\end_inset

序列生成的Toeplitz矩阵，且
\begin_inset Formula 
\[
\gamma_{k}=\begin{cases}
\sigma^{2}(\theta_{k}+\theta_{k+1}\theta_{1}+...+\theta_{q}\theta_{q-k}) & \text{，}k=0,1,...,q\\
0 & \text{，}k>q
\end{cases}\tag{5.5.7}
\]

\end_inset

类似的，由卡尔曼滤波或者由
\begin_inset Formula $\boldsymbol{\Omega}$
\end_inset

的三角分解可得
\begin_inset Formula 
\[
\boldsymbol{\Omega}=\boldsymbol{ADA}'\tag{5.5.8}
\]

\end_inset

其中，
\begin_inset Formula $\boldsymbol{A}$
\end_inset

是一个下三角矩阵，当
\begin_inset Formula $i>q+j$
\end_inset

时，
\begin_inset Formula $a_{ij}=0$
\end_inset


\begin_inset Formula 
\[
\boldsymbol{A}=\left[\begin{array}{cccccc}
1 & 0 & 0 & \cdots & 0 & 0\\
a_{21} & 1 & 0 & \cdots & 0 & 0\\
a_{31} & a_{32} & 1 & \cdots & 0 & 0\\
\vdots & \vdots & \vdots & \cdots & \vdots & \vdots\\
a_{q+1,1} & a_{q+1,2} & a_{q+1,3} & \cdots & 0 & 0\\
0 & a_{q+2,2} & a_{q+2,3} & \cdots & 0 & 0\\
\vdots & \vdots & \vdots & \cdots & \vdots & \vdots\\
0 & 0 & 0 & \cdots
\end{array}\right]
\]

\end_inset

然后经过前述同样的方法可得
\begin_inset Formula 
\[
f_{\boldsymbol{Y}}(\boldsymbol{y};\boldsymbol{\theta})=(2\pi)^{-T/2}|\boldsymbol{D}|^{-1/2}e^{-\frac{1}{2}\tilde{\boldsymbol{y}}'\boldsymbol{D}^{-1}\tilde{\boldsymbol{y}}}
\]

\end_inset

其中
\begin_inset Formula $\tilde{\boldsymbol{y}}=\boldsymbol{A}^{-1}(\boldsymbol{y-\mu})$
\end_inset

，我们可以通过递归的方法求出所有
\begin_inset Formula $\tilde{\boldsymbol{y}}$
\end_inset

的元素
\begin_inset Formula 
\begin{align*}
\tilde{y}_{1} & =y_{1}-\mu\\
\tilde{y}_{2} & =y_{2}-\mu-a_{21}\tilde{y}_{1}\\
\tilde{y}_{3} & =y_{3}-\mu-a_{32}\tilde{y}_{2}-a_{31}\tilde{y}_{1}\\
 & \vdots\\
\tilde{y}_{t} & =y_{t}-\mu-a_{t,t-1}\tilde{y}_{t-1}-a_{t,t-2}\tilde{y}_{t-2}-...-a_{t,t-q}\tilde{y}_{t-q}
\end{align*}

\end_inset

则精确对数似然函数为
\begin_inset Formula 
\begin{align*}
\mathscr{L}(\boldsymbol{\theta}) & =lnf_{\boldsymbol{Y}}(\boldsymbol{y};\boldsymbol{\theta})\\
 & =-\frac{T}{2}ln(2\pi)-\frac{1}{2}\sum_{t=1}^{T}ln(d_{tt})-\frac{1}{2}\sum_{t=1}^{T}\frac{\tilde{y}_{t}^{2}}{d_{tt}}\tag{5.5.10}
\end{align*}

\end_inset


\end_layout

\begin_layout Section
高斯ARMA(p,q)过程的似然函数
\end_layout

\begin_layout Itemize
一个高斯ARMA(p,q)过程
\begin_inset Formula 
\begin{align*}
Y_{t} & =c+\phi_{1}Y_{t-1}+\phi_{2}Y_{t-2}+...+\phi_{p}Y_{t-p}\\
 & +\varepsilon_{t}+\theta_{1}\varepsilon_{t-1}+...+\theta_{q}\varepsilon_{t-q}\tag{5.6.1}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
给定初始值
\begin_inset Formula $\boldsymbol{y}_{0}\equiv(y_{0},y_{-1},...,y_{-p+1})'$
\end_inset

和
\begin_inset Formula $\boldsymbol{\varepsilon}_{0}=(\varepsilon_{0},\varepsilon_{-1},...,\varepsilon_{-q+1})'$
\end_inset

，于是我们可以通过迭代
\begin_inset Formula 
\[
\varepsilon_{t}=y_{t}-c-(\phi_{1}y_{t-1}+\phi_{2}y_{t-2}+...+\phi_{p}y_{t-p})-(\theta_{1}\varepsilon_{t-1}+...+\theta_{q}\varepsilon_{t-q})\tag{5.6.2}
\]

\end_inset

条件似然函数为
\begin_inset Formula 
\begin{align*}
\mathscr{L}(\boldsymbol{\theta}) & =lnf_{Y_{T},Y_{T-1},...,Y_{1}|\boldsymbol{Y}_{0},\boldsymbol{\varepsilon_{0}}}(y_{T},y_{T-1},...,y_{1}|\boldsymbol{y}_{0},\boldsymbol{\varepsilon_{0}};\boldsymbol{\theta})\\
 & =-\frac{T}{2}ln(2\pi)-\frac{T}{2}ln(\sigma^{2})-\sum_{t=1}^{T}\frac{\varepsilon_{t}^{2}}{2\sigma^{2}}\tag{5.6.3}
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
可以令
\begin_inset Formula $y$
\end_inset

和
\begin_inset Formula $\varepsilon$
\end_inset

的初始值为其期望值
\begin_inset Formula 
\begin{align*}
y_{s} & =\frac{c}{1-\phi_{1}-\phi_{2}-...-\phi_{p}}\text{，}s=0,-1,...,-p+1\\
\varepsilon_{s} & =0\text{，}s=0,-1,...,-q+1
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
另外，
\begin_inset Formula $Box\,and\,Jenkins(1976)$
\end_inset

建议令各个
\begin_inset Formula $\varepsilon$
\end_inset

为0，但令各个
\begin_inset Formula $y$
\end_inset

等于其实际值，也就是说不再假设初始值，而是从
\begin_inset Formula $t=p+1$
\end_inset

开始迭代，令
\begin_inset Formula $y_{1},y_{2},...,y_{p}$
\end_inset

等于其观测值且令
\begin_inset Formula $\varepsilon_{p}=\varepsilon_{p-1}=...=\varepsilon_{p-q+1}=0$
\end_inset

，此时条件对数似然函数为
\begin_inset Formula 
\[
\mathrm{ln}f(y_{T},..,y_{p+1}|y_{p},...,y_{1},\varepsilon_{p}=0,...,\varepsilon_{p-q+1}=0)=-\frac{T-p}{2}ln(2\pi)-\frac{T-p}{2}ln(\sigma^{2})-\sum_{t=p+1}^{T}\frac{\varepsilon_{t}^{2}}{2\sigma^{2}}\tag{5.6.3}
\]

\end_inset


\end_layout

